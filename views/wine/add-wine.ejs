<%- include('../layouts/header') %>
<section class="edit-form">
    <div class="container">
        <h2 class="text-center">Add Wine</h2>
        <form action="/wine/add-wine" method="POST">
            <div class="form-group">
                <!-- <label for="title">Title</label> -->
                <input type="text" placeholder="title" class="form-control" name="title">
            </div><br>
            <div class="form-group">
                <!-- <label for="country">Country</label> -->
                <select name="country" id="country" class="form-control">
                    <option value="Germany">Deutschland</option>
                    <option value="France">France</option>
                </select>
            </div><br>
            <div class="form-group">
                <!-- <label for="">Region</label> -->
                <select name="region" id="region" class="form-control">
                    <option value="Morstein">Mosel</option>
                    <option value="Essen">Essen</option>
                </select>
            </div><br>
            <div class="form-group">
                <!-- <label for="lage">Lage</label> -->
                <select name="lage" id="lage" class="form-control">
                    <option value="Morstein">Morstein</option>
                    <option value="Wesel">Wesel</option>
                </select>
            </div><br>
            <div class="form-group">
                <!-- <label for="sweetness">Sweetness</label> -->
                <input type="text" placeholder="Sweetness" class="form-control" name="sweetness">
            </div><br>
            <div class="form-group">
                <!-- <label for="sugarLevel">Sugar level</label> -->
                <input type="text" placeholder="Sugar Level" class="form-control" name="sugarLevel">
            </div><br>
            <div class="form-group">
                <!-- <label for="wineType">Wine Type</label> -->
                <input type="text" placeholder="wineType" class="form-control" name="wineType">
            </div><br>
            <div class="form-group">
                <!-- <label for="wineColor">Wine Color</label> -->
                <input type="text" placeholder="Wine Color" class="form-control" name="wineColor">
            </div><br>
            <div class="form-group">
                <!-- <label for="desc">Description</label> -->
                <textarea id="desc" type="text" placeholder="Description" class="form-control" name="desc"></textarea>
            </div><br>
            <div class="form-group">
                <!-- <label for="alcoholLevel">Alcohol Level</label> -->
                <input id="alcoholLevel" type="text" placeholder="Alcohol Level" class="form-control" name="alcoholLevel">
            </div><br>
            <div class="form-group">
                <!-- <label for="vintage">Vintage</label> -->
                <select name="vintage" id="vintage" class="form-control">
                    <option value="2017">2017</option>
                    <option value="2018">2018</option>
                    <option value="2019">2019</option>
                    <option value="2020">2020</option>
                    <option value="2021">2021</option>
                </select>
            </div><br>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="false"  id="flexCheckDefault" name="validEAN">
                <label class="form-check-label" for="flexCheckDefault">ValidEAN</label>
            </div><br>
            <div class="form-group">
                <!-- <label for="acidity">Acidity</label> -->
                <input id="acidity" type="text" placeholder="Acidity" class="form-control" name="acidity">
            </div><br>
            <div class="form-group">
                <!-- <label for="winery">Winery</label> -->
                <input id="winery" type="text" placeholder="Winery" class="form-control" name="winery">
            </div><br>
            <div class="form-group">
                <!-- <label for="Grape">Grape</label> -->
                <input id="grape" type="text" placeholder="Grape" class="form-control" name="grape">
            </div><br>
            <div class="form-group">
                <label for="appellation">Appellation</label>
                <input id="appellation" type="text" placeholder="Appellation" class="form-control" name="appellation">
            </div><br>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
</section>
<%- include('../layouts/footer') %>
